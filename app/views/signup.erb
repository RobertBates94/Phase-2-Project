<h1>Sign Up Below:</h1>
    <% if @error %>
        <% @error.each do |e| %>
            <h4> Errors: <%= e %> </h4>
        <% end %>
    <% end %>
<form action='/signup' method="post">
    <label> Name: </label>
    <input type="text" name="name" /><br>
    <br>
    <label> Username: </label>
    <input type="text" name="username" /><br>
    <br>
    <label> Password: </label>
    <input type="password" name="password" /><br>
    <br>
    <input type="submit" value="Sign Up" />


</form>
